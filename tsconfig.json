{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es5",
    // removes unnecessary default React imports
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    //import common as ES
    "allowSyntheticDefaultImports": true,
    // import * as T from '.'=> import T from ''
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}